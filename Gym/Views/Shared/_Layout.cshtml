<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gym</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gym.styles.css" asp-append-version="true" />
    <style>
        html,
        body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        footer {
            background-color: #2E2E2E;
            padding: 1rem 0;
            text-align: center;
            border-top: 1px solid #dee2e6;
            color: #6c757d;
        }

        #SingOut {
            color: white;
            transition: color 0.5s;
        }

        #SingOut:hover {
            color: rgb(161, 32, 32);
        }

        .setingBtn {
            border: none;
            background-color: #2E2E2E;
            color: white;
            margin-top: 12%;
        }

        #blackBg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            border: 1px solid black;
        }

        #setingBox {
            background-color: rgb(25, 26, 31);
            height: 600px;
            width: 1000px;
            border-radius: 25px;
            border: #3a3a3c solid 1px;
            color: white;
            display: flex;
            gap: 10px;
        }

        #leftD {
            width: 45%;
            height: 60%;
            border: 1px solid white;
            border-radius: 10px;
            padding: 15px;

        }

        #rightD {
            width: 45%;
            height: 60%;
            border: 1px solid white;
            border-radius: 10px;
            padding: 20px;

        }
    </style>
</head>

<body>
    <header>
        <nav id="head" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">Fit Manager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li id="main" class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index2">صفحه
                                اصلی</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home"
                                asp-action="Privacy">کاربران</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home"
                                asp-action="userlogs">گزارشات</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="SingUp">ثبت
                                نام</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home"
                                asp-action="changePassword">تعویض رمز</a>
                        </li>
                        @* <li class="nav-item">
                            <button onclick="setingBtn()" class="setingBtn">تنظیمات</button>
                        </li> *@
                    </ul>
                    <a id="SingOut" class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">خروج</a>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container">
        @RenderBody()
    </main>
    <div id="blackBg" style="display: none;">
        <div id="setingBox">
            <div id="leftD">
                <h2>مدیریت جلسات</h2>
            </div>
            <div id="rightD">
                <h2>تم برنامه</h2>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FitManager - Designed
            and developed by Rasteh and Eydi
        </div>
        <div class="container"></div>
        &copy; Phone number : 09175229136 & 09395971830
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
<script>
    function setingBtn() {

    }
</script>